{
  "manifest_version": 2,
  "version": "0.1.0",
  "name": "SpeechAgent - Speech to Text Recognition",
  "description": "Fill active text area with your speech using the built-in speech recognition engine of your browser",
  "permissions": [
    "storage",
    "activeTab",
    "notifications"
  ],
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png",
    "512": "data/icons/512.png"
  },
  "homepage_url": "https://add0n.com/speech-agent.html",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "data/ui/index.html"
  }
}
